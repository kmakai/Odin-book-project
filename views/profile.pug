extends base
include _postForm
include _postCard
include _userCard

block content 
  .profile-page 
    .user-info 
      img(src="images/default.jpg", alt="user image")
      p.user-name= profile.name 
      p.user-email= profile.email
    
    .posts 
      +postForm
      each post in posts 
        +postCard(post)
    .friends-requests    
      .friends
        p.friends-title Friends
        each friend in profile.friends 
          .user-card 
            img(src=`images/default.jpg`, alt="user")
            p= friend.name
      .requests
          p.requests-title Pending Requests
          each friend in profile.friendRequests 
            +userCard(friend)